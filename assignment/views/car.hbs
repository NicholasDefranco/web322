{{#if car}}
<div class="row">
<div class="col-md-12">
        <legend><h2>{{car.make}} {{car.model}} - Vin: {{car.vin}}</h2></legend>
        <hr />
        <form method="post" action="/car/update">
                <fieldset>
                <legend>Car Information</legend>

                <!-- vin text box is hidden not allowing the user to
                        change it -->
                <input class="form-control" id="vin" name="vin" type="hidden"
                        value="{{car.vin}}" placeholder="" />

                <div class="row">

                        <div class="col-md-6">
                        <div class="form-group">
                                <label for="make">Car Make:</label>
                                <input class="form-control" id="make"
                                name="make" type="text" value="{{car.make}}" />
                        </div>
                        </div>

                        <div class="col-md-6">
                        <div class="form-group">
                                <label for="model">Car Model:</label>
                                <input class="form-control" id="model"
                                name="model" type="text" value="{{car.model}}" />
                        </div>
                        </div>

                </div>

                <div class="row">
                        <div class="col-md-6">
                        <div class="form-group">
                                <label for="year">Car Year:</label>
                                <input class="form-control" id="year"
                                name="year" type="text" value="{{car.year}}" />
                        </div>
                        </div>
                </div>

                <input type="reset" class="btn btn-primary pull-left"
                value="Reset" />
                <input type="submit" class="btn btn-primary pull-right"
                value="Update Car" /><br /><br /><br />

        </form>
</div>
</div>
{{else}}
<div class="row">
        <div class="alert alert-danger">
                <strong> Error: </strong>
                {{errorMessage}}
        </div>
</div>
{{/if}}
