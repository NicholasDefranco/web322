<div class="row">
    <div class="col-md-12">

        {{#if errorMessage}}
                <div class="alert alert-danger">
                        <strong> Error: </strong>
                        {{errorMessage}}
                </div>
        {{/if}}

	<legend><h2>Add Store</h2></legend>
	<br>
	<!--
	method - HTTP verb to be used when a submission is made
	action - route
	-->
	<form method="post" action="/stores/add">
	    <fieldset>
		<legend>Store Information</legend>
		<div class="row">
		    <div class="col-md-6">
			<div class="form-group">
			    <label for="retailer">Store Name</label>
			    <input class="form-control" id="retailer"
                            name="retailer" type="text">
			</div>
		    </div>
		    <div class="col-md-6">
			<div class="form-group">
			    <label for="phone">Store Phone:</label>
			    <input class="form-control" id="phone" name="phone" type="text">
			</div>
		    </div>
		</div>
		<div class="row">
		    <div class="col-md-6">
			<div class="form-group">
			    <label for="address">Store Address:</label>
			    <input class="form-control" id="address"
                            name="address" type="text">
			</div>
		    </div>
		    <div class="col-md-6">
			<div class="form-group">
			    <label for="city">Store City:</label>
			    <input class="form-control" id="city" name="city" type="text">
			</div>
		    </div>
		</div>
	    </fieldset>
	    <hr>
	    <input type="reset" class="btn btn-primary pull-left"
	    value="Reset Store">

	    <input type="submit" class="btn btn-primary pull-right" value="Add
            Store"><br><br><br>

	</form>
    </div>
</div>
