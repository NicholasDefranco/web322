<div class="row">
    <div class="col-md-12">
        <h2>People</h2>
        <hr />
        <div class="table-responsive">
        <table class="table ">
            <thead>
            <tr>
                <th>Person&nbsp;ID</th>
                <th>Full&nbsp;Name</th>
                <th>Phone Number</th>
                <th>City</th>
                <th>Car Vin</th>
            </tr>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/person/{{id}}">{{first_name}} {{last_name}}</a></td>
                    <td><a href="tel:{{phone}}">{{phone}}</a></td>
                    <td> {{city}}</td>
                    <td><a href="/cars?vin={{vin}}">{{vin}}</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        </div>
    </div>
    {{#unless people}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>